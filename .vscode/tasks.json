{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Qt5: Configure",
      "type": "shell",
      "command": "qmake",
      "args": [".."],
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "group": "build"
    },
    {
      "label": "Qt5: Build",
      "type": "shell",
      "command": "make",
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}